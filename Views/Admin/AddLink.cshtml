@model Link;

<div class='addlink'>
    @* Title *@
    <div class="addlink__title">
        <span class='h2'>_launchPad.</span>
        <span class='h3'>administration</span>
        <a asp-controller="Login" asp-action="Logout"><input type="submit" value="Logout" class="btn btn-light"/></a>
        <span id="lblExpire" class="text-warning" style="margin-left:20px"></span>
    </div>

    @* Header *@
    <div class="addlink__header">
        <h4  class="text-warning">Add Link.</h4>
        <div style="margin-bottom:10px">Enter the new link data below:</div>
    </div>

    @* Form *@
    <form method="post">
      <div class="form-group">
            <input type="hidden" asp-for="@Model.categoryID">

            <label>Category</label>
            <select id="categoryList" asp-for="@Model.categoryID" asp-items="ViewBag.selectList" class="btn-secondary form-control" disabled></select><br>
            
            <div class="form-group">
                <label>Label</label>
                <input type="text" asp-for="@Model.linkName" class="form-control" maxlength="50" />
                <span asp-validation-for="@Model.linkName" class="text-danger" /><br>
            </div>

            <div class="form-group">
                <label>URL</label>
                <input type="text" asp-for="@Model.url" class="form-control" maxlength="100" />
                <span asp-validation-for="@Model.url" class="text-danger" />
            </div>

            <div class="form-group">
                <label>Pinned</label><br>   
                <input type="checkbox" asp-for="@Model.pinned" name="pinned" id="pinned"> Pin Link to top
            </div>

            <button type="submit" asp-controller="Admin" asp-action="AddLinkSubmit" class="btn btn-warning">Add Link</button>
            <a asp-controller="Admin" asp-action="Index"><input type="button" class="btn btn-warning" value="Cancel"/></a>
      </div>
    </form>
</div>

@section scripts {
    <script>
        startAutoLogout();
    </script>
}